    "flux": "^2.0.1",
    "debug": "~2.1.1",
    "express": "~4.12.2",
    "serve-favicon": "~2.2.0",
    "socket.io": "~1.3.5",
    "socket.io-client": "~1.3.5",
    "object-assign": "~2.0.0",
    "classnames": "~1.2.1"
  },
  "devDependencies": {
    "jsxc": "~0.1.6",
    "browserify": "^6.2.0",
    "watchify": "^2.1.1",
    "reactify": "^0.15.2"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
